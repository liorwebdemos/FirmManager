{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parserOptions": {
		"ecmaVersion": 2019,
		"sourceType": "module",
		"project": "./tsconfig.json",
		"tsconfigRootDir": "."
	},
	"rules": {
		"no-console": "warn",
		"quotes": [
			"error",
			"double",
			{
				"avoidEscape": true
			}
		],
		"semi": "off",
		"@typescript-eslint/semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"never"
		],
		"indent": "off",
		"@typescript-eslint/indent": [
			"error",
			"tab"
		],
		"no-prototype-builtins": "off"
	},
	"env": {
		"es6": true,
		"browser": true,
		"node": true
	}
}